@model MVC_CRUD.Data.EntitiesDTO.CategoryEntrieDTO

<form asp-action="Edit"  method="post">
           <input type="hidden" asp-for="Id" />
           <div class="row">
               <div class="col-lg-12">
                   <div class="form-group">
                       <label>ParentId:</label>
                       <input asp-for="ParentId" type="text" class="form-control " placeholder="Enter paterntid" tabindex="1">
                   </div>
                   <div class="form-group">
                       <label>Title:</label>
                       <input asp-for="Title" type="text" class="form-control " placeholder="Enter title" tabindex="1">
                   </div>
                    <div class="form-group">
                       <label>MetaTitle:</label>
                       <input asp-for="MetaTitle" type="text" class="form-control " placeholder="Enter last metatitle" tabindex="2">
                   </div>
                    <div class="form-group">
                       <label>Slug:</label>
                       <input asp-for="Slug" type="text" class="form-control " placeholder="Enter slug" tabindex="3">
                   </div>
                    <div class="form-group">
                       <label>Content:</label>
                       <input asp-for="Content" type="text" class="form-control " placeholder="Enter content" tabindex="4">
                   </div>
                   <div class="form-group">
                       <div asp-validation-summary="All" class="text-danger"></div>
                   </div>
                   <div class="card-footer">
                       <center>
                           <button type="submit" class="btn btn-warning">Update Category</button>
                           <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Cancel</a>
                       </center>
                   </div>
               </div>
           </div>
       </form>
       
