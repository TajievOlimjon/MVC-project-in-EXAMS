@model List<MVC_CRUD.Data.Entities.Student>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Student" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Age</td>
                <td>Email</td>                
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td> 
                    <td>@item.Age</td>
                    <td>@item.Email</td>

                    <td>
                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
