@model MVC_CRUD.Data.Entities.Student

<form asp-action="Edit"  method="post">
           <input type="hidden" asp-for="Id" />
           <div class="row">
               <div class="col-lg-12">
                   <div class="form-group">
                       <label>First Name:</label>
                       <input asp-for="FirstName" type="text" class="form-control " placeholder="Enter first name" tabindex="1">
                   </div>
                    <div class="form-group">
                       <label>Last Name:</label>
                       <input asp-for="LastName" type="text" class="form-control " placeholder="Enter last name" tabindex="2">
                   </div>
                    <div class="form-group">
                       <label>Age:</label>
                       <input asp-for="Age" type="text" class="form-control " placeholder="Enter age" tabindex="3">
                   </div>
                    <div class="form-group">
                       <label>Email:</label>
                       <input asp-for="Email" type="text" class="form-control " placeholder="Enter email" tabindex="4">
                   </div>
                   <div class="form-group">
                       <div asp-validation-summary="All" class="text-danger"></div>
                   </div>
                   <div class="card-footer">
                       <center>
                           <button type="submit" class="btn btn-warning">Update Student</button>
                           <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Cancel</a>
                       </center>
                   </div>
               </div>
           </div>
       </form>
       